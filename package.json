    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "chai": "^4.3.6",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.4",
    "hardhat": "^2.8.4",
    "web3": "^1.6.0",
    "eth-sig-util": "^3.0.1",
    "ethereumjs-util": "^7.1.3"
